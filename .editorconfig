root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md,markdown}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.{js,ts,tsx}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space
